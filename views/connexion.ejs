<div class='structureElement'>

<div class='structureName'>
Connexion
</div>

<div class='connexion'>
<% if(!connexion.username) { %>
	<% if (connexion.message) { %>
		<p><%= connexion.message %></p>
			<% } %>
			<script type="text/ecmascript">
			function connect() {
				var connexionForm = document.getElementById("connexionForm");
				connexionForm.submit();	
			}
	</script>
		<form style='display:inline;' id='connexionForm' method='POST' action='/login' enctype='application/x-www-form-urlencoded'>
		<input type='text' id='username' name='username'/>
		<input type='password' id='password' name='password'/>
		<a onclick='connect()'>Se connecter</a>

		</form>
		<a style='cursor:pointer;font-style:bold' href='createProfil.htm'>Cr&eacute;er un profil</a>

		<% } else { %>
			<script type="text/ecmascript">
				function logout() {
					var logoutForm = document.getElementById("logoutForm");
					logoutForm.submit();	
				}
			</script>
				<div style='display:inline;' ><%=connexion.username%></div>
				<form style='display:inline;' id='logoutForm' method='POST' action='/logout' enctype='application/x-www-form-urlencoded'>
				<a onclick='logout()'> Se d&eacute;connecter </a>
				<% }%>
				</div>
				</div>

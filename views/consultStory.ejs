if(user.profil[i] === 'user') {
return true;
}
}
return false;
};
function isModerator(user) {
for(var i = 0; i<connexion.user.profil.length;i++) {
if(user.profil[i] === 'moderator') {
return true;
}
}
return false;
};
function isSpecialist (user) {
